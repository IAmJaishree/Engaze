<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/class_parent"
    android:elevation="4dp"
    android:background="@drawable/grayish"
    android:layout_margin="4dp"
    android:paddingTop="8dp"
    android:paddingBottom="12dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/single_assignment_title"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Title"
        android:textColor="#333"
        android:textSize="18sp"
        android:textStyle="bold"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"/>


    <TextView
        android:id="@+id/single_assignment_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/single_assignment_title"
        app:layout_constraintTop_toBottomOf="@id/single_assignment_title" />



    <TextView
        android:id="@+id/file_single_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:text="Uploaded time: "
        app:layout_constraintStart_toStartOf="@+id/single_assignment_description"
        app:layout_constraintTop_toBottomOf="@id/single_assignment_description" />

    <TextView
        android:id="@+id/file_single_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="00/00/0000"
        android:textColor="@color/black"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@id/file_single_date_label"
        app:layout_constraintTop_toTopOf="@+id/file_single_date_label" />


</androidx.constraintlayout.widget.ConstraintLayout>